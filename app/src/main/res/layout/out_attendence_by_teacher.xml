<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/tv_select_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_blue"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_main"
        android:layout_below="@+id/tv_select_filter"
        />



    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:animateLayoutChanges="true"
        >

        <Button
            android:id="@+id/btn_out_all_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Out All"
            android:textColor="@color/white"
            android:background="@drawable/app_blue_rectangle"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            />


        <Button
            android:id="@+id/btn_out_selected"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Out Selected"
            android:textColor="@color/white"
            android:background="@drawable/app_blue_rectangle"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>



</RelativeLayout>