<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >

            <!--Guardian details >>>>-->

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_guardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/white"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/item_image_guardian"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/no_image"
                        app:civ_border_color="@color/app_blue"
                        app:civ_border_width="2dp" />


                    <EditText
                        android:id="@+id/guardian_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/app_blue_border"
                        android:hint="Guardian Name"
                        android:padding="@dimen/edit_field_padding"
                        android:textSize="14sp"
                        android:textColor="@color/app_blue"
                        />


                    <EditText
                        android:id="@+id/guardian_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/app_blue_border"
                        android:padding="@dimen/edit_field_padding"
                        android:textSize="14sp"
                        android:textColor="@color/app_blue"
                        />


                    <RelativeLayout
                        android:id="@+id/rel_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/app_blue_border"
                        android:layout_marginTop="10dp"
                        >

                        <Spinner
                            android:id="@+id/spinner_relation_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingEnd="20dp"
                            android:backgroundTint="@color/app_blue"
                            >
                        </Spinner>

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/phone_no_guardian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/app_blue_border"
                        android:hint="Phone No"
                        android:padding="@dimen/edit_field_padding"
                        android:textSize="14sp"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/app_blue"
                        />


                    <EditText
                        android:id="@+id/email_guardian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/app_blue_border"
                        android:hint="Email"
                        android:padding="@dimen/edit_field_padding"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/app_blue"
                        />



                    <LinearLayout
                        android:id="@+id/linear_guardian_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >


                        <EditText
                            android:id="@+id/street_name_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/app_blue_border"
                            android:hint="Street Address"
                            android:padding="@dimen/edit_field_padding"
                            android:textSize="14sp"
                            android:textColor="@color/app_blue"
                            />


                        <EditText
                            android:id="@+id/city_name_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/app_blue_border"
                            android:hint="City Name"
                            android:padding="@dimen/edit_field_padding"
                            android:textSize="14sp"
                            android:textColor="@color/app_blue"
                            />


                        <EditText
                            android:id="@+id/state_name_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/app_blue_border"
                            android:hint="State Name"
                            android:padding="@dimen/edit_field_padding"
                            android:textSize="14sp"
                            android:textColor="@color/app_blue"
                            />


                        <EditText
                            android:id="@+id/country_name_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/app_blue_border"
                            android:hint="Country Name"
                            android:padding="@dimen/edit_field_padding"
                            android:textSize="14sp"
                            android:textColor="@color/app_blue"
                            />


                        <EditText
                            android:id="@+id/pincode_guardian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/app_blue_border"
                            android:hint="Pincode"
                            android:padding="@dimen/edit_field_padding"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColor="@color/app_blue"
                            />


                        <CheckBox
                            android:id="@+id/cb_sms_subscription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:buttonTint="@color/app_blue"
                            android:hint="Sms Subscription"
                            android:padding="@dimen/edit_field_padding" />

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!--Add button >>>>-->

            <RelativeLayout
                android:id="@+id/rel_action_guardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="@dimen/relative_button_padding"
                android:background="@drawable/app_blue_rectangle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/add_white" />

                    <TextView
                        android:id="@+id/tv_button_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Student"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />


                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></RelativeLayout>


            </LinearLayout>

    </ScrollView>


</RelativeLayout>